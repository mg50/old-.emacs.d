class MockStoriesInteractor
  attr_accessor :story_attributes, :user, :story
  def initialize(is_success = true, story = nil)
    @is_success = is_success
    @story= story
  end
  
  def create(story_attributes, user, success_callback, failure_callback)
    @story_attributes = story_attributes
    @user = user
    if @is_success
      success_callback.call @story
    else
      failure_callback.call
    end
  end
  
  def update(story_id, story_attributes, user, success_callback, failure_callback)
    @story_attributes = story_attributes
    @user = user
    if @is_success
      success_callback.call @story
    else
      failure_callback.call
    end
  end
end