describe("Abacus.Views.Project", function() {
  beforeEach(function() {
    loadFixtures('_project.html');
    this.project = new Abacus.Models.Project({id: 3, client_id: 2, name: "XYZ"});
    this.project.getClientList = function() {
      return [
        {id: 1, name: 'Client One'},
        {id: 2, name: 'Client Two'}
      ]
    };
    this.view = new Abacus.Views.Project({model: this.project});
  });

  describe("render", function() {
    it("links to '#'", function() {
      this.view.render();

      expect(this.view.$('a').attr('href')).toBe('#');
    });
  });
});
