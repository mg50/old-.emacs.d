namespace('Abacus.Views', {
  MustacheInDialogView: Abacus.Views.SimpleMustacheView.extend({
    template: 'define in subclass',

    presenterData: function() {
      return {
        default: "Override the presenterData function in your subclass"
      }
    },

    render: function() {
      Abacus.Dialog.open();
      var view = Abacus.Views.SimpleMustacheView.prototype.render.call(this);
      return this;
    },

    close: function() {
      Abacus.Dialog.close();
    }
  })
});
