Abacus::Application.routes.draw do

  root :to => 'clients#index'

  resources :projects do
    resources 'project_notes'
  end
  resources 'project_notes'

  resources 'clients'

  match 'projects/sort', :to => 'projects#sort'
  match "/auth/failure" => "sessions#authenticate_fail"
  match "/auth/google_oauth2/callback" => "sessions#authenticate_admin"
  match "/signout" => "sessions#destroy", :as => :signout

  match '/users' => "users#users_list"

end
