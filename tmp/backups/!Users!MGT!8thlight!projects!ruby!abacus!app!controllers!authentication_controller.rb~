class AuthenticationController < ActionController::Base
  protect_from_forgery

  USERS = YAML::load(File.open(File.join(Rails.root, 'config', 'users.yml')))

  def admin?
    session[:admin_user] && USERS[Rails.env].include?(session[:admin_user])
  end

  helper_method :admin?

  def admin_required
    redirect_to '/auth/google_oauth2' unless admin?
  end

end
