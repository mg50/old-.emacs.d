describe("Abacus.Views.Contact", function() {
  beforeEach(function() {
    loadFixtures('_contact.html');
    this.contact = new Abacus.Models.Contact({
      id: 5, 
      name: 'Bill Gates'
    });
    this.view = new Abacus.Views.Contact({model: this.contact});
  });

  describe("events", function() {
    it("shows edit on click", function() {
      var ShowContactEditStub = sinon.stub(this.view, 'showContactEdit');
      this.view.render();

      this.view.$('a').trigger('click');
      expect(ShowContactEditStub).toHaveBeenCalled();
    });
  });
});
