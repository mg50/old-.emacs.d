require 'contact/contact_active_record'
require 'project/project_active_record'

module DBAdapter
  class Contact

    Singleton=Contact.new

    def create(attributes)
      return AR::Contact.new(attributes)
    end

    def find(id)
      return AR::Contact.find(id)
    end

    def find_all()
      return AR::Contact.all()
    end

    def update(id, attributes)
      return AR::Contact.update(id, attributes)
    end

  end
end
