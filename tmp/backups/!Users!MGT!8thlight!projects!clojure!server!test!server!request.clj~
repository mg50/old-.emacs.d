(ns server.test.request
  (:use [server.request])
  (:use [clojure.test]))

(deftest replace-me ;; FIXME: write
  (is false "No tests have been written."))

(comment
(deftest test-parse-request-line-1
  (is (parse-request-line "GET / HTTP/1.1")
      {:method :GET
       :path "/"
       :http-ver "HTTP/1.1"}))

(deftest test-parse-request-line-2
  (is (parse-request-line "POST /foo HTTP/1.1")
      {:method :POST
       :path "/foo"
       :http-ver "HTTP/1.1"}))

(deftest test-parse-request-line-3
  (is (parse-request-line "PUT /foo/bar?baz=1 HTTP/1.1")
      {:method :PUT
       :path "/foo/bar?baz=1"
       :http-ver "HTTP/1.1"})))
