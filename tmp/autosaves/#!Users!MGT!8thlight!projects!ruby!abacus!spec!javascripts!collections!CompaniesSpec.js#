describe("Abacus.Collections.Companies", function() {
  beforeEach(function() {
    this.collection = new Abacus.Collections.Companies();
  });

  it("model is Abacus.Models.Company", function() {
    expect(this.collection.model).toBe(Abacus.Models.Company);
  });

  it("url is '/companies'", function() {
    expect(this.collection.url).toBe('/companies');
  });

  it("sorts companies in the correct order", function() {
          this.collection.push(new Abacus.Models.Company({name: 'B'}));
          this.collection.push(new Abacus.Models.Company({name: 'A'}));
          this.collection.push(new Abacus.Models.Company({name: 'a'}));

          expect(this.collection.at(2).get('name')).toBe('B');
                             
  });
});
